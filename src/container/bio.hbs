<div>
    <div class="py-2">
        <h1>{{name}}</h1>
    </div>

    <div class="py-2"><b>Born: </b>{{birthdate}} / {{birthplace}}</div>



    <div class="py-2"><b>Died: </b>{{deathdate}} / {{deathplace}}</div>



    <div class="py-2"><b>Nationality: </b>{{nationality}}</div>



    <div class="py-2"><b>Occupation: </b>{{occupation}}</div>



    <div class="py-2">
        {{> title data="Known for:" big=false}}

        {{#each known_for}}
        <ul>
            <li> {{this}} </li>
        </ul>
        {{/each}}
    </div>



    <div class="py-2">
        {{> title data="Education:" big=false}}

        {{#each education}}
        {{degree}}/ {{field}}/ {{institution}}, {{year}}
        {{/each}}
    </div>



    <div class="py-2">
        {{> title data="Notable publications:" big=false}}

        {{#each notable_publications}}
        <ul>
            <li> {{title}} ({{year}}) <em>{{publisher}}</em> </li>
        </ul>
        {{/each}}
    </div>

    <div class="py-2">
        {{> title data="Partners:" big=false}}

        {{#each partners}}
        <ul>
            <li> {{name}} ({{relationship}}) <em>{{years}}</em> </li>
        </ul>
        {{/each}}
    </div>


    <div class="py-2">
        {{> title data="Awards:" big=false}}

        {{#each awards}}
        {{> description}}
        {{/each}}
    </div>


    <div class="py-2">
        {{> title data="Influences:" big=false}}

        {{#each influences}}
        <ul>
            <li> {{this}} </li>
        </ul>
        {{/each}}
    </div>



    <div class="py-2">
        {{> title data="Influenced:" big=false}}

        {{#each influenced}}
        <ul>
            <li> {{this}} </li>
        </ul>
        {{/each}}
    </div>



    <div class="py-2">
        {{> title data="Quotes:" big=false}}

        {{#each quotes}}
        <ul>
            <li><q>{{this}}</q></li>
        </ul>
        {{/each}}
    </div>

    <div class="py-2">
        {{> title data="Major discoveries:" big=false}}

        {{#each major_discoveries}}
        {{> description}}
        {{/each}}
    </div>


    <div class="py-2">
        {{> title data="Contributions:" big=false}}

        {{#with contributions}}
        {{> description}}
        {{/with}}
    </div>



</div>
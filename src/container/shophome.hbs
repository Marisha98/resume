<main>

    <hr>

    <div class="row my-1">
        <div class="col-12">
            {{#with navigation}}
            <div class="nav">

                {{#each links}}
                <div class="nav-item">
                    {{#if href value="null"}}
                    <a href="{{href}}" class="nav-link">{{text}}</a>
                    {{else}}
                    <a href="{{href}}" class="nav-link disabled">{{text}}</a>
                    {{/if}}
                </div>
                {{/each}}

            </div>
            {{/with}}
        </div>
    </div>

    <hr>

    <div class="col-12 py-4">
        {{#with newsBlock}}
        <h2 class="text-center">{{title}}</h2>

        <div class="row">
            {{#each cards}}
            <div class="col-3 my-1">
                <div class="card h-100 text-bg-dark">
                    <div class="card-header">
                        <h6 class="card-title">{{title}}</h6>

                        {{#if isTop}}
                        <span class="badge rounded-pill text-bg-danger">TOP</span>
                        {{else}}
                        <span class="badge rounded-pill text-bg-success">New</span>
                        {{/if}}

                    </div>


                    <div class="card-body">
                        <p>{{description}}</p>
                    </div>

                </div>
            </div>
            {{/each}}

        </div>
        {{/with}}
    </div>

    <hr>

    <div class="row">
        <div class="col-12 my-4">
            <div class="nav nav-tabs m-0">
                {{#with goodsBlock}}

                {{#each tabs}}
                <div class="nav-item">

                    {{#if isActive}}
                    <a class="nav-link active">
                        {{text}}
                    </a>

                    {{else}}
                    {{#if isDisabled}}
                    <a class="nav-link disabled">
                        {{text}}
                    </a>
                    {{else}}
                    <a class="nav-link">
                        {{text}}
                    </a>
                    {{/if}}
                    {{/if}}

                </div>
                {{/each}}
            </div>
        </div>
    </div>




    <div class="col-12 py-4">
        <div class="row">
            {{#each cards}}

            <div class="col-4 py-3">
                <div class="card h-100">
                    <img class="card-img-top" src="{{image}}">

                    <div class="card-body">
                        <div class="row">
                            <h5 class="card-title col-9">{{title}}</h5>
                            <div class="col-3 ps-0">
                                {{#if isHot}}
                                <span class="badge rounded-pill text-bg-warning">Hot</span>
                                {{else}}
                                <span class="badge rounded-pill text-bg-primary">New</span>
                                {{/if}}
                            </div>
                        </div>
                        <p>{{description}}</p>
                    </div>
                </div>
            </div>
            {{/each}}
            {{/with}}
        </div>
    </div>

    <hr>

    <div class="col-12">
        <div class="card text-bg-dark">
            <div class="row">
                {{#with subscribe}}
                <div class="card-body py-2 ms-1">

                    <h2>{{header}}</h2>

                    <p>{{description}}</p>

                    {{#each buttons}}
                    <p class="mb-0"><a href="{{link}}" class="btn btn-primary my-1">{{text}}</a></p>
                    {{/each}}

                </div>
                {{/with}}
            </div>
        </div>
    </div>

    <hr>

    <div class="col-12">
        <div class="card text-bg-success text-center">
            <div class="row">
                {{#with service}}
                <div class="card-body py-2 ms-1">

                    <h2>{{title}}</h2>

                    <p>{{description}}</p>

                    {{#each buttons}}
                    <p class="mb-0"><a href="{{link}}" class="btn btn-primary my-1">{{text}}</a></p>
                    {{/each}}

                </div>
                {{/with}}
            </div>
        </div>
    </div>

    <hr>


    <div class="row">
        {{#each footer}}
        <div class="nav col-2">
            <table>
                <tbody>
                    <tr><a href="{{[0].link}}" class="nav nav-link py-0">{{[0].text}}</a></tr>
                    <tr><a href="{{[1].link}}" class="nav nav-link">{{[1].text}}</a></tr>
                    <tr><a href="{{[2].link}}" class="nav nav-link">{{[2].text}}</a></tr>
                    <tr><a href="{{[3].link}}" class="nav nav-link disabled">{{[3].text}}</a></tr>
                </tbody>
            </table>
        </div>
        {{/each}}
    </div>

</main>
<main>

    <hr>

    <div class="row my-2">
        <div class="col-12">
            {{#with navigation}}
            <div class="nav">
                <div class="nav-item">
                    <a href="{{links.[0].href}}" class="nav-link active">{{links.[0].text}}</a>
                </div>

                <div class="nav-item">
                    <a href="{{links.[1].href}}" class="nav-link active">{{links.[1].text}}</a>
                </div>

                <div class="nav-item">
                    <a href="{{links.[2].href}}" class="nav-link active">{{links.[2].text}}</a>
                </div>

                <div class="nav-item">
                    <a href="#" class="nav-link disabled">Extra</a>
                </div>

            </div>
            {{/with}}
        </div>
    </div>

    <hr>

    <div class="col-12 py-4">
        {{#with newsBlock}}
        <h2 class="text-center">{{title}}</h2>

        <div class="row">
            {{#each cards}}
            <div class="col-3 my-1">
                <div class="card text-bg-dark">
                    <div class="card-header">
                        <h6 class="card-title">{{title}}</h6>

                        {{#if isTop}}
                        <span class="badge rounded-pill text-bg-danger">TOP</span>
                        {{else}}
                        <span class="badge rounded-pill text-bg-success">New</span>
                        {{/if}}

                    </div>


                    <div class="card-body">
                        <p>{{description}}</p>
                    </div>

                </div>
            </div>
            {{/each}}

        </div>
        {{/with}}
    </div>

    <hr>

    <div class="col-12 py-4">
        <div class="row">
            {{#with goodsBlock}}

            {{#each tabs}}

            <div class="col-2">
                <div class="nav nav-tabs">

                    {{#if isActive}}
                    <div class="nav-item">

                    </div>


                    {{/if}}

                </div>
            </div>
            {{/each}}









            <div class="col-5">
                <div class="card">
                    <img class="card-img-top" src="{{cards.[0].picture.src}}" alt="{{cards.[0].picture.alt}}">

                    <div class="card-body">

                        <h5 class="card-title">{{cards.[0].title}}</h5>

                        <p>{{cards.[0].description}}</p>

                        <a href="{{cards.[0].button.href}}" class="btn btn-primary">{{cards.[0].button.text}}</a>
                    </div>
                </div>
            </div>
            {{/with}}
        </div>
    </div>

</main>
<div class="card col-12 my-2">
    <div class="row">
        <div class="col-2 p-2 ps-3"><img class="card-img-top" src="{{image}}" alt="goodsBlock"></div>

        <div class="card-body col-10 p-2">
            <div class="row">
                <div class="col-5 py-2">
                    <h5>{{name}}</h5>

                    <p class="m-0">{{description}}</p>
                </div>

                <div class="col-2 py-5">
                    <div>{{price.title}}:</div>
                    <div>{{price.value}}</div>
                </div>
                <div class="col-2 py-5">
                    <div>{{amount}}</div>
                </div>
                <div class="col-3 py-3">
                    {{#each buttons}}
                    {{#if isPrimary}}
                    <button class="btn btn-primary my-2">{{text}}</button>
                    {{/if}}

                    {{#if isDanger}}
                    <button class="btn btn-outline-danger my-2">{{text}}</button>
                    {{/if}}
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>
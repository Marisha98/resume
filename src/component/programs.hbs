<div>
    <ul>
        {{#each program}}
        {{!-- array of {{program.excursion}} --}}


        <li>
            <div class="my-3">
                <h2>{{name}}</h2>
            </div>



            <div class="py-1">Type: {{type}}</div>



            <div class="py-1">Duration: <em>{{duration}}</em></div>



            {{#if details}}
            <div class="py-1">Details:</div>


            {{#with details}}
            <div class="py-1">Place: {{#if museum}} "{{museum.name}}" {{else}} "{{venue.name}}"{{/if}}</div>



            <div class="mt-3">Location: </div>



            <div class="my-1">
                {{#if museum}}
                {{#with museum}}
                {{> location}}
                {{/with}}
                {{else}}
                {{#with venue}}
                {{> location}}
                {{/with}}
                {{/if}}
            </div>


            <div class="py-3">
                {{#if museum}}

                <b>Exhibits:</b>

                <ul>
                    {{#each museum.exhibits}}
                    <li class="py-1">
                        <div>
                            <div class="py-1"><b>"{{name}}"</b> -</div>
                            <p class="m-1">{{description}}</p>
                        </div>
                        <div>
                            {{#if artist}} <p class="m-1">Artist: {{artist}}</p> {{/if}}
                        </div>
                        <div class="m-1">
                            {{#if audio_guide}} Audio guide : + {{/if}}
                        </div>
                    </li>

                    {{/each}}
                </ul>

            </div>

            {{/if}}



            <div>
                {{#if performers}}

                <b class="py-3">Performers:</b>



                {{#each performers}}



                <div class="py-1">
                    <ul>
                        <li>{{name}} - {{type}}</li>
                    </ul>
                </div>
                {{/each}}



                {{/if}}
            </div>

            {{> guide}}


            {{/with}}
            {{/if}}


            {{/each}}

        </li>

    </ul>


</div>